# Portfolio Tracker Environment Configuration
# Copy this file to .env and adjust values as needed

# Database Configuration
DATABASE_URL=postgresql://portfolio:portfolio@postgres:5432/portfolio_db

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Application Settings
ENVIRONMENT=production
LOG_LEVEL=INFO
TZ=Europe/Rome

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000/api

# CORS Origins (comma-separated list)
ALLOWED_ORIGINS=["http://localhost:3000"]

# External API Keys (optional)
COINGECKO_API_KEY=  # Optional: For higher rate limits with CoinGecko API

# Price Update Schedule (Europe/Rome timezone)
PRICE_UPDATE_HOUR=23
PRICE_UPDATE_MINUTE=0

# Cache TTL (seconds)
PRICE_CACHE_TTL=86400  # 24 hours
METRICS_CACHE_TTL=86400  # 24 hours
