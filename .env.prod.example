# Production Environment Variables Example
# Copy this file to .env and update with your actual values
#
# IMPORTANT: Never commit this file with real secrets!

# Database Configuration
POSTGRES_PASSWORD=your_secure_database_password_here
DATABASE_URL=postgresql://portfolio:your_secure_database_password_here@postgres:5432/portfolio_db

# Redis Configuration
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Application Configuration
ENVIRONMENT=production
LOG_LEVEL=INFO
TZ=Europe/Rome

# Security
SECRET_KEY=your_secret_key_here_or_let_it_auto_generate

# CORS Configuration - IMPORTANT: Set to your actual frontend domain
ALLOWED_ORIGINS=["https://yourdomain.com", "https://www.yourdomain.com"]

# Frontend Configuration
# Runtime backend API URL for Next.js API routes
BACKEND_API_URL=http://backend:8000

# Public API URL for client-side requests
NEXT_PUBLIC_API_URL=https://api.yourdomain.com/api

# Optional: External API Keys (remove if not using)
# COINGECKO_API_KEY=your_coingecko_api_key_here

# Optional: Analytics and Monitoring
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
# NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn-here

# Optional: Performance Tuning
# CELERY_WORKER_CONCURRENCY=4
# CELERY_WORKER_PREFETCH_MULTIPLIER=1

# Example Multi-Host Deployment Settings:
#
# If frontend and backend are on different hosts:
# BACKEND_API_URL=https://api.yourdomain.com
# NEXT_PUBLIC_API_URL=https://api.yourdomain.com/api
#
# If using external database:
# DATABASE_URL=postgresql://user:password@external-db-host:5432/dbname
#
# If using external Redis:
# REDIS_URL=redis://external-redis-host:6379/0
# CELERY_BROKER_URL=redis://external-redis-host:6379/0
# CELERY_RESULT_BACKEND=redis://external-redis-host:6379/0